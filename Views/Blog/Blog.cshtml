@model IEnumerable<PawWebApp.Models.Blog>
@{
    ViewData["Title"] = "Blog";
}

<body>
	<section id="page-header" class="blog-header" style="background-image: url('@Url.Content("~/img/banner/b2.png")');">

		<h2>Blog</h2>
		<p>Browse all of our stories and achievements!</p>

	</section>

	<section id="blog">
	@foreach (var blog in Model)
	{
		<div class="blog-box">
			<div class="blog-img">
				@if (!string.IsNullOrEmpty(blog.PhotoPath))
				{
						<img src="~/img/blog/@blog.PhotoPath" alt="">
				}
			</div>
			<div class="blog-details">
				<h4>@blog.Title</h4>
				<p>@blog.Description</p>
					<a asp-controller="Blog" asp-action="BlogPost" asp-route-id="@blog.Id">CONTINUE READING</a>
			</div>
		</div>
	}

			<!-- Pagination -->
	<nav aria-label="Page navigation">
		<ul class="pagination">
			@for (int i = 1; i <= ViewBag.TotalPages; i++)
			{
				<li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
					<a class="page-link" href="/Blog?page=@i">@i</a>
				</li>
			}
		</ul>
	</nav>
	</section>
</body>
